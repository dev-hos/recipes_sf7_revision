{% extends 'admin/admin.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
 <h1>Liste des catégories</h1>
  <a href="{{path('admin.categories.create')}}" class="btn btn-primary btn-sm mb-2">Ajouter une catégorie</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">Total des recettes</th>
        <th scope="col" style="width: 200px; text-align:center;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr>
          <th scope="row">{{category.name}}</th>
          <td> {{category.count}} </td>
          <td class="d-flex gap-2">
            <a href="{{path('admin.categories.edit', {id: category.id})}}" class="btn btn-warning btn-sm">Modifier</a>
            <form action="{{path('admin.categories.delete', {id: category.id})}}" method="post" onclick="return confirm('Etes vous sur de supprimer la recette ?')">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
