{% extends 'admin/admin.html.twig' %}

{% block title %}
  Liste des recettes
{% endblock %}

{% block body %}
  <h1>Liste des recettes</h1>
  <a href="{{path('admin.recipes.create')}}" class="btn btn-primary btn-sm mb-2">Ajouter une recette</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Titre</th>
        <th scope="col">Slug</th>
        <th scope="col">Catégorie</th>
        <th scope="col">Durée</th>
        <th scope="col" style="width: 200px; text-align:center;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for recipe in recipes %}
        <tr>
          <th scope="row"> <a href="{{path('admin.recipes.show', {id:recipe.id, slug:recipe.slug})}}">{{recipe.title}}</a> </th>
          <td> {{recipe.slug}} </td>
          <td> {{recipe.category.name}} </td>
          <td> {{recipe.duration}} </td>
          <td class="d-flex gap-2">
            <a href="{{path('admin.recipes.edit', {id: recipe.id})}}" class="btn btn-warning btn-sm">Modifier</a>
            <form action="{{path('admin.recipes.delete', {id: recipe.id})}}" method="post" onclick="return confirm('Etes vous sur de supprimer la recette ?')">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
